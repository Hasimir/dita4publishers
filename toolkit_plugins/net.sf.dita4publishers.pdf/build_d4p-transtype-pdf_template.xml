<?xml version="1.0" encoding="UTF-8"?>
<project name="net.sf.dita4publishers-transtype-pdf" default="dita2pdf-d4p">
  
  <!-- =========================
    Build file for use with the DITA Open Toolkit.
    
    Configures the base PDF2 plugin to use 
    the D4P customizations.
    
    ========================= -->
  
  <property name="transtype" value="pdf-mypub"/>
  
  <target name="dita2pdf-d4p"
    xmlns:dita="http://dita-ot.sourceforge.net"
    dita:extension="depends org.dita.dost.platform.InsertDependsAction"
    >
    <!-- Override the default root XSLT transform to use ours, which then overrides many many things.
      -->
    <property name="args.xsl.pdf" value="${dita.plugin.net.sf.dita4publishers.pdf.dir}/xsl/d4pMap2xslfo.xsl"/>  
    <antcall target="dita2pdf2"/>
  </target>
  
  
</project>
