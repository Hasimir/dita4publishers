<rsuite-plugin id="dita4publishers">
  <!-- RSuite CMS plugin configuration. Used to package the DITA4Publishers transforms and
       other resources into an RSuite plugin for use by other RSuite-integrated components,
       e.g. action handlers.
     -->

  <extensionProvider id="rsuite.WebService">

    <!-- for the static root starting at "/dita4publishers",
         serve the files in /WebContent of the plugin -->

    <staticWebService root="/dita4publishers"
                      path="/WebContent"/>

  </extensionProvider>
  
    <extensionProvider id="rsuite.Workflow">
     <actionHandler 
         type="org.dita4publishers.rsuite.workflow.actions.DitaOtXhtmlTaskRunningActionHandler"
        label="DITA to XHTML">
         <variableList>
           <variable><name>outputPath</name></variable>
           <variable><name>buildProperties</name></variable>
           <variable><name>antReportIdVarName</name></variable>           
         </variableList>            
     </actionHandler>
     <actionHandler 
         type="org.dita4publishers.rsuite.workflow.actions.AntTaskRunningActionHandler"
        label="Run Ant Task">
         <variableList>
           <variable><name>buildFilePath</name></variable>
           <variable><name>buildTarget</name></variable>
           <variable><name>buildProperties</name></variable>
           <variable><name>antReportIdVarName</name></variable>
         </variableList>            
     </actionHandler>
     <actionHandler
       type="org.dita4publishers.rsuite.workflow.actions.MapExporterActionHandler"
       label="Export DITA Maps"
     >
         <variableList>
         <variable><name>outputPath</name></variable>
         </variableList>            
     </actionHandler>
     <actionHandler
       type="org.dita4publishers.rsuite.workflow.actions.MapImporterActionHandler"
       label="Import DITA Maps"
     >
         <variableList>
           <variable><name>rootMapPath</name></variable>
           <variable><name>mapFileName</name></variable>
           <variable><name>parentBrowseTreeFolder</name></variable>
           <variable><name>parentCaNode</name></variable>
         </variableList>            
     </actionHandler>
     
  </extensionProvider>
  
 
</rsuite-plugin>
