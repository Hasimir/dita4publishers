<topic id="topic_b42_c24_tq">
  <title>Nested Table Test</title>
  <body>
    <p>Here is a table with a nested table:</p>
    <table
      frame="all"
      rowsep="1"
      colsep="1"
      id="table_x4d_224_tq">
      <title>Table With Nested Tables</title>
      <tgroup
        cols="4">
        <colspec
          colname="c1"
          colnum="1"
          colwidth="1.0*"/>
        <colspec
          colname="c2"
          colnum="2"
          colwidth="1.0*"/>
        <colspec
          colname="c3"
          colnum="3"
          colwidth="1.0*"/>
        <colspec
          colname="c4"
          colnum="4"
          colwidth="1.0*"/>
        <thead>
          <row>
            <entry>R1</entry>
            <entry>R2</entry>
            <entry>R3</entry>
            <entry>R4</entry>
          </row>
        </thead>
        <tbody>
          <row>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
          </row>
          <row>
            <entry>No nested table</entry>
            <entry>
              <p>
                <table
                  frame="all"
                  rowsep="1"
                  colsep="1"
                  id="table_kbg_h24_tq">
                  <title>Nested Table 3 Columns</title>
                  <tgroup
                    cols="3">
                    <colspec
                      colname="c1"
                      colnum="1"
                      colwidth="1.0*"/>
                    <colspec
                      colname="c2"
                      colnum="2"
                      colwidth="1.0*"/>
                    <colspec
                      colname="c3"
                      colnum="3"
                      colwidth="1.0*"/>
                    <thead>
                      <row>
                        <entry>NTR1</entry>
                        <entry>NTR2</entry>
                        <entry>NTR3</entry>
                      </row>
                    </thead>
                    <tbody>
                      <row>
                        <entry>R1C1</entry>
                        <entry>R1C2</entry>
                        <entry>R1C3</entry>
                      </row>
                      <row>
                        <entry>R2C1</entry>
                        <entry>R2C2</entry>
                        <entry>R2C3</entry>
                      </row>
                      <row>
                        <entry>R3C1</entry>
                        <entry>R3C2</entry>
                        <entry>R3C3</entry>
                      </row>
                    </tbody>
                  </tgroup>
                </table>
              </p>
            </entry>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
          </row>
          <row>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
            <entry>No nested table</entry>
          </row>
        </tbody>
      </tgroup>
    </table>
  </body>
